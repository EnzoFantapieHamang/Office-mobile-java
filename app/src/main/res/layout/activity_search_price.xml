<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActivitySearchPrice">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo_office" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recherche par prix"
        android:textSize="25sp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <RadioButton
            android:id="@+id/rb_egal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recherche égal"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/rb_inf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recherche inférieur à :"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/rb_sup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recherche supérieur à"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_recherchePrix"
            android:layout_width="421dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number" />

        <Button
            android:id="@+id/bt_recherchePrix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rechercher" />

        <TextView
            android:id="@+id/tv_resultRecherchePrix"
            android:layout_width="match_parent"
            android:layout_height="259dp" />

    </RadioGroup>
</LinearLayout>